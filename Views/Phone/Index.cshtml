@{
    ViewData["Title"] = "Phone Number Extraction";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <h2 class="text-center text-primary">📞 Extract Phone Numbers</h2>
        <p class="text-muted text-center">Paste your text below, and we’ll extract phone numbers with their owners.</p>

        <form method="post" class="mt-3">
            <div class="mb-3">
                <textarea name="inputText" rows="5" class="form-control" placeholder="Enter text here..."></textarea>
            </div>
            <button type="submit" class="btn btn-primary w-100">📤 Process Text</button>
        </form>

        @if (!string.IsNullOrEmpty(ViewBag.Message))
        {
            <div class="alert alert-warning mt-3 text-center">@ViewBag.Message</div>
        }

        @if (ViewBag.Contacts != null && ViewBag.Contacts.Count > 0)
        {
            <h3 class="mt-4 text-center text-success">✅ Extracted Contacts</h3>
            <div class="table-responsive">
                <table class="table table-striped table-hover mt-3">
                    <thead class="table-dark">
                        <tr>
                            <th>👤 Owner Name</th>
                            <th>📱 Phone Number</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var contact in ViewBag.Contacts)
                        {
                            <tr>
                                <td>@contact.OwnerName</td>
                                <td>@contact.Number</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
        font-family: 'Arial', sans-serif;
    }

    .card {
        border-radius: 10px;
        max-width: 700px;
        margin: auto;
    }

    textarea {
        resize: none;
        border-radius: 8px;
        padding: 10px;
        font-size: 16px;
    }

    .btn-primary {
        font-size: 18px;
        padding: 10px;
        border-radius: 8px;
    }

    .table {
        margin-top: 20px;
    }

    th, td {
        text-align: center;
    }
</style>
